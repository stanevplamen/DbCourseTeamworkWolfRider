             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="800">
    <Canvas Height="500" Width="800">
        <Button x:Name="btnBrowse" Content="Browse" HorizontalAlignment="Left" VerticalAlignment="Top" Width="130" Click="btnBrowse_Click" Canvas.Top="69" Height="35" Canvas.Left="514" FontSize="20" Foreground="Black">
        </Button>
        <Button x:Name="btnExtract" Content="Extract" Canvas.Left="514" Canvas.Top="157" Width="130" Height="53" Click="btnExtract_Click" FontSize="20"/>
        <TextBlock x:Name="txtPath" Canvas.Left="54" TextWrapping="Wrap" Canvas.Top="69" Height="35" Width="431"/>
        <Button x:Name="btnOrderLoader" Content="Load orders" Width="130" Canvas.Left="514" Canvas.Top="247" Height="49" FontSize="20" Click="btnOrderLoader_Click"/>
    </Canvas>
</UserControl>
