<UserControl x:Class="CupOfCoffee.UI.WPF.View.StartingControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="800">
    <Canvas Height="500" Width="800">
        <TextBlock x:Name="txtTitle" Canvas.Left="58" TextWrapping="Wrap" Text="Cup Of Coffee" Canvas.Top="85" Height="157" Width="664" FontSize="100"/>
        <Button x:Name="btnEnter" Content="Enter" Canvas.Left="240" Canvas.Top="260" Width="324" Height="60" FontSize="25" Click="btnEnter_Click"/>
        <Button x:Name="btnExit" Content="Exit" Canvas.Left="240" Canvas.Top="375" Width="324" Height="60" FontSize="25" Click="btnExit_Click"/>
    </Canvas>
</UserControl>
